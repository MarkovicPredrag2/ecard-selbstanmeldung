doctype html
html
  head
    // ======= Meta Tags =======
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title Warteraumansicht
    // ======= CSS Dependencies =======
    // Bootstrap v3.3.7
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
    // W3schools CSS
    link(rel='stylesheet', href='https://www.w3schools.com/w3css/4/w3.css')
    // Font awesome v4.7.0
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
    // Tabelle bzw. Tabs CSS
    link(rel='stylesheet', type='text/css', href='/public/resources/css/style_tabelle.css', media='screen')
    // Tabelle - Sortierung
    link(rel='stylesheet', type='text/css', href='/public/resources/css/style_tabelle_dms.css', media='screen')
  body(onload='startTime()')
    // ======= Navbar =======
    nav.navbar.navbar-inverse.navbar-static-top(style='position:fixed; width:100%;')
      .container-fluid(style='font-size: 20px')
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='#myNavbar')
            span.icon-bar
            span.icon-bar
            span.icon-bar
          // Home Icon
          a.navbar-brand.fa.fa-home.fa-2x(data-toggle='tooltip', title='Home', aria-hidden='true', href='/role/arzt/ansicht/homepage')
        #myNavbar.collapse.navbar-collapse
          ul.nav.navbar-nav
            // Template: username p= user
            li
              p#user.navbar-text.fa.fa-user-md.fa-2x(style='color: orange', aria-hidden='true')
                | &nbsp
                span#user= user
            // Navigation
            li
              a(href='/role/arzt/ansicht/warteraumansicht', style='margin-top: 5%') Warteraumansicht
            li
              a(href='/role/arzt/ansicht/arztansicht', style='margin-top: 7%') Arztansicht
            li
              a(href='/role/arzt/ansicht/logs', style='margin-top: 5%') Logging Historie
          ul.nav.navbar-nav.navbar-right
            // Time
            li
              p#clock.navbar-text(style='margin-top: 15.5%;')
            // Logout button
            li(data-toggle='tooltip', title='Logout')
              a.fa.fa-power-off.fa-2x(style='color: red; margin-top: 17%;', href='/role/logout', aria-hidden='true')
    // ======= Mid-Section =======
    .container
      // Logos oben links bzw. rechts
      span
        img(src='/public/resources/img/ecs.png', style='margin-top: 10%; flaot:left; width: 5%; height: 5%')
      span
        img(src='/public/resources/img/svc.png', style='margin-top: 10%; float:right; width: 10%; height: 7.5%')
      // Warteliste Name + Raum mit Bildern
      font(size='11')
        i.fa.fa-user-plus.fa-4x(style='margin-left:10%; margin-top: 5%', aria-hidden='true')
          font(size='12', style='margin-left:20px')
            b &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp Christopher Neuberger
      font(size='11')
        img(src='/public/resources/img/door.png', style='margin-left:8%; width: 20%; height:25%; margin-top: 2.5%', aria-hidden='true')
        font(size='12', style='margin-left:20px') &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp Ordination: 2
      // ======= Footer =======
      div
        hr.featurette-divider
        footer
          p
            | © 2018 Five4U, Diplomprojekt ·
            a(href='/public/impressum.html') Impressum
            span(style='float: right;')
              | E-Card Selbstanmeldungs Tool ·
              a(href='/public/info.html') Info &nbsp &nbsp
    // ======= JS Dependencies =======
    // jQuery library
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js')
    // Latest compiled JavaScript
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')
    script(src='https://code.jquery.com/jquery-1.12.4.js')
    // Time Script
    script(type='text/javascript', src='/public/resources/js/time.js')
